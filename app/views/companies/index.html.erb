<div class="container py-5">
  <h3>Companies</h3>
  <%= link_to "+ Create a Company", new_company_path %><br>
  <% if @companies.empty? %>
  <p>No Companies Found</p>
  <% else %>
    <ul class="list-group my-5">
      <% @companies.each do |company| %>
        <span  class="list-group-item list-group-item-action">
        <a href="<%= company_path(company) %>">
          <b><%= company.name %></b>
        </a>
        <%= link_to 'Remove Company', company, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger delete-button float-right" %>
        </span>
      <% end %>
    </ul>
  <% end %>
</div>
